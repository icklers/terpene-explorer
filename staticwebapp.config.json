{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json",
  "trailingSlash": "never",
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/assets/**",
      "/data/**", 
      "/manifest.json",
      "/favicon.ico",
      "/favicon.svg",
      "*.js",
      "*.mjs",
      "*.css",
      "*.json",
      "*.png",
      "*.jpg",
      "*.jpeg",
      "*.gif",
      "*.ico",
      "*.svg",
      "*.woff",
      "*.woff2",
      "*.ttf",
      "*.eot",
      "*.map",
      "*.txt",
      "*.yaml",
      "*.yml"
    ]
  },
  "routes": [
    {
      "route": "/assets/*.js",
      "headers": {
        "Content-Type": "text/javascript; charset=utf-8",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/assets/*.css",
      "headers": {
        "Content-Type": "text/css; charset=utf-8",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/assets/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.js",
      "headers": {
        "Content-Type": "text/javascript; charset=utf-8",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.mjs",
      "headers": {
        "Content-Type": "text/javascript; charset=utf-8",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.css",
      "headers": {
        "Content-Type": "text/css; charset=utf-8",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/manifest.json",
      "headers": {
        "Content-Type": "application/json; charset=utf-8",
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "route": "/data/*.json",
      "headers": {
        "Content-Type": "application/json; charset=utf-8",
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "route": "/data/*.yaml",
      "headers": {
        "Content-Type": "text/yaml; charset=utf-8",
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "route": "/data/*",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "route": "/*.{woff,woff2,ttf,eot}",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.{png,jpg,jpeg,gif,ico,svg}",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "route": "/index.html",
      "headers": {
        "Cache-Control": "no-cache, must-revalidate"
      }
    },
    {
      "route": "/*",
      "rewrite": "/index.html"
    }
  ],
  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https:; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests;",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
    "Permissions-Policy": "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()"
  },
  "mimeTypes": {
    ".js": "text/javascript; charset=utf-8",
    ".mjs": "text/javascript; charset=utf-8",
    ".json": "application/json; charset=utf-8",
    ".css": "text/css; charset=utf-8",
    ".map": "application/json; charset=utf-8",
    ".svg": "image/svg+xml",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".jpeg": "image/jpeg",
    ".gif": "image/gif",
    ".ico": "image/x-icon",
    ".txt": "text/plain; charset=utf-8",
    ".woff": "font/woff",
    ".woff2": "font/woff2",
    ".ttf": "font/ttf",
    ".eot": "application/vnd.ms-fontobject"
  },

  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  }
}
